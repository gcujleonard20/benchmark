/* Simple console-based calculator program*/
#include <stdio.h>
#include <conio.h>
#include <math.h>
#include <stdlib.h>

#define KEY "Enter the calculator Operation you want to do: Press 'H' or 'h' for menu."

/* Function declaration*/
void addition();
void subtraction();
void multiplication();
void division();
void paycheck();
void calculator_operations();

int main()
{
	/*Variable declarations*/
	int X = 1;
	char Calc_oprn;

	while (X)											//while loop that allows for multiple calculations w/o exiting
	{
		printf("\n");
		printf("%s : ", KEY);

		Calc_oprn = _getche();							//function that waits and accepts user input from keyboard

		switch (Calc_oprn)								//Switch function for user choices as below
		{
			case '+': addition();
				break;
			case '-': subtraction();
				break;
			case '*': multiplication();
				break;
			case '/': division();
				break;
			case 'P':
			case 'p': paycheck();
				break;
			case 'H':
			case 'h': calculator_operations();
				break;
			case 'Q':
			case 'q': exit(0);
				break;
			case 'C':
			case 'c': system("cls");
					calculator_operations();
				break;
		}
	}
}

void calculator_operations()						//Call to display main menu and options
{
	printf("\nWelcome to calculator \n");
	printf("Press 'Q' or 'q' to quit \n");
	printf("Press 'H' or 'h' to display options \n");
	printf("Press 'C' or 'c' to clear the screen \n\n");

	printf("Enter + for Addition \n");
	printf("Enter - for Subtraction \n");
	printf("Enter * for Multiplication \n");
	printf("Enter / for Division \n");
	printf("Enter 'P' or 'p' to calc paycheck \n");
}

void addition()										//function for addition of multiple numbers
{
	int n, total = 0, k = 0, number;
	printf("\nEnter the number of elements you want to add:");
	scanf_s("%d", &n);
	printf("Please enter %d numbers one at a time: \n", n);
	while (k < n)
	{
		scanf_s("%d", &number);
		total = total + number;
		k = k + 1;
	}
	printf("Sum of %d numbers = %d \n", n, total);
}

void subtraction()									//function to subtract two numbers
{
	int a, b, c = 0;
	printf("\nPlease enter first number:");
	scanf_s("%d", &a);
	printf("Please enter second number:");
	scanf_s("%d", &b);
	c = a - b;
	printf("\n%d - %d = %d\n", a, b, c);
}

void multiplication()								//function to multiply two numbers
{
	int a, b, mul = 0;
	printf("\nPlease enter first number:");
	scanf_s("%d", &a);
	printf("Please enter second number:");
	scanf_s("%d", &b);
	mul = a * b;
	printf("\nProduct of numbers entered = %d\n", mul);
}

void division()										//function to divide two numbers
{
	int a, b, d = 0;
	printf("\nPlease enter first number:");
	scanf_s("%d", &a);
	printf("Please enter second number:");
	scanf_s("%d", &b);
	if (b == 0)										//safeguard against dividing by zero error
	{
		printf("Division by zero! Exiting...\n");
		exit(-1);
	}
	d = a / b;
	printf("\nQuotient of the numbers entered = %d\n", d);
}

void paycheck()
{
	struct employee
	{
		char name[50];
		int hours;
		int hourly_pay;
		int wages;
	};
	struct employee pay;

	printf("\nPlease enter your name:");
	scanf_s("%s", &pay.name[50]);
	printf("\nPlease enter total hours worked:");
	scanf_s("%i", &pay.hours);
	printf("\nPlease enter your hourly pay rate:");
	scanf_s("%i", &pay.hourly_pay);
	pay.wages = pay.hours * pay.hourly_pay;
	printf("\nHello %s your paycheck will be %i after working %i hours this week", pay.name, pay.wages, pay.hours);
}
